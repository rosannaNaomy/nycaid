<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presenter.HomeActivity">

    <ImageView
        android:id="@+id/main_bottomHeader_imageView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/mainTopHeader_imageView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/home_food_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Food"
        app:layout_constraintBottom_toBottomOf="@+id/homeFood_cardView"
        app:layout_constraintEnd_toEndOf="@+id/homeFood_cardView"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/homeFood_cardView"
        app:layout_constraintTop_toTopOf="@+id/homeFood_cardView"
        app:layout_constraintVertical_bias="0.888" />


    <androidx.cardview.widget.CardView
        android:id="@+id/homeFood_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        app:cardBackgroundColor="#62C1DF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <androidx.cardview.widget.CardView
        android:id="@+id/homeFinance_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        app:cardBackgroundColor="#62C1DF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeFood_cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <androidx.cardview.widget.CardView
        android:id="@+id/homeHealth_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#62C1DF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/homeFinance_cardView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/home_finance_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Finance"
        app:layout_constraintBottom_toBottomOf="@+id/homeFinance_cardView"
        app:layout_constraintEnd_toEndOf="@+id/homeFinance_cardView"
        app:layout_constraintStart_toStartOf="@+id/homeFinance_cardView"
        app:layout_constraintTop_toTopOf="@+id/homeFinance_cardView"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/home_health_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Health"
        app:layout_constraintBottom_toBottomOf="@+id/homeHealth_cardView"
        app:layout_constraintEnd_toEndOf="@+id/homeHealth_cardView"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/homeHealth_cardView"
        app:layout_constraintTop_toTopOf="@+id/homeHealth_cardView"
        app:layout_constraintVertical_bias="0.876" />



</androidx.constraintlayout.widget.ConstraintLayout>